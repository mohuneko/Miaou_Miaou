<div class="container">
  <div class="row">
    <div class="col-5">

        <h3>新規登録</h3>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          

          <table class="table table-borderless">
            <thead>

                    <div class="fields">
                      <%= f.label :名前 %>
                      <%= f.text_field :name, autofocus: true, class: "field" %>
                    </div>

                    <div class="fields">
                      <%= f.label :電話番号 %>
                      <%= f.phone_field :tell, autofocus: :true, class: "field" %>
                    </div>

                    <div class="fields">
                      <%= f.label :メールアドレス %>
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field" %>
                    </div>

                    <div class="fields">
                      <%= f.label :password %>
                      <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> characters minimum)</em>
                      <% end %>
                      <%= f.password_field :password, autocomplete: "new-password", class: "field" %>
                    </div>

                    <div class="fields">
                      <%= f.label :password_confirmation %>
                      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "field" %>
                    </div>

            </thead>
           </table>

          <div class="actions">

            <%= f.submit "新規登録する" %>

          </div>
        <% end %>

     </div>
  </div>
</div>
