<div class="container">
	<div class="row">

		<%= render 'layouts/sidebar' %>

	  <div class="col-4">

    <h3 class="title">マイページ<i class="fas fa-cat"></i></h3>
　

		 <h4>登録情報 <i class="fas fa-cog"></i></h4>
	
					    <p>プロフィール画像▼</p>
					    <p class="mypage_image"><%= image_tag @customer.profile_image.to_s, size:"260x260" %></p>
		    
		              <div class="mypage_follow">
		                <p><i class="fas fa-flag"></i><%= "フォロー数: #{@customer.follower.count}" %> <i class="fa fa-heart"></i><%= "フォロワー数: #{@customer.followed.count}" %></p>
		              </div>

					<table class="mypage_list">
						<tr>
							<th>名前</th>
							<td><%= @customer.name %>さん</td>
						</tr>
						<tr>
							<th>電話番号 <i class="fas fa-mobile-alt"></i></th>
							<td><%= @customer.tell %></td>
						</tr>
						<tr>
							<th>メールアドレス<i class="far fa-envelope"></i></th>
							<td><%= @customer.email %></td>
						</tr>
		
					</table>

		  <br><a><%= link_to '編集する', customers_fix_path, class:"button" %></a>
          <a><%= link_to 'パスワード変更', edit_customer_registration_path, class:"button" %></a>

      </div>

     <div class="col-6 mypage">

　　  <div class="mypage_favorite">
     	<%= link_to image_tag("favorite2.jpg", size:'400x80'), customers_product_posts_favorite_path %>
     	<%= link_to image_tag("favorite3.jpg", size:'400x80'), customers_cafe_posts_favorite_path %>
     	<%= link_to image_tag("myposts.jpg", size:'250x80'), customers_contact_path %><br>
     	<%= link_to image_tag("contact.jpg", size:'250x80'), customers_contact_path %>

     </div>


	 </div>
	</div>
</div>